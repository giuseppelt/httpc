  .container-features {
    display: grid;
    gap: 2rem 6rem;
    grid-template-columns: 1fr 1fr;

    @media (min-width: 769px) and (max-width: 1024px) {
      grid-template-columns: 1fr 1fr;
    }

    @media (max-width: 768px) {
      grid-template-columns: 1fr;
