        "module": "commonjs",
        "skipLibCheck": true,
        "strict": true,
        "target": "es2022",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
    },
    "include": [
        "src"
    ]
}
