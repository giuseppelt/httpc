---
import { Icon } from "astro-icon";
import { Package, packageMeta } from "../constants";

export interface Props {
  href: string;
  title: Package;
  description?: string;
}

const { href, title, description = packageMeta[title].description } = Astro.props;
const { icon } = packageMeta[title];
---

<a class="button-card">
  <div class="package-card">
    <div class="d-flex">
      {icon && <Icon class="icon" name={icon} />}
      <div class="wrap ms-3">
        <p class="text-md fw-bold mb-1">{title}</p>
        <p class="desc text-xs">{description}</p>
      </div>
    </div>
    {
      Astro.slots.has("default") && (
        <>
          <hr class="my-3" />
          <div class="text-xs">
            <slot />
          </div>
        </>
      )
    }
  </div>
</a>
