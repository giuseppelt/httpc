---
import Layout from "../../layouts/Layout.astro";
import Sidebar from "../../components/Sidebar.astro";
import PostList from "../../components/PostList.astro";
import { getPosts } from "../../content";
import { Icon } from "astro-icon";

const posts = await getPosts();
---

<Layout
  title="Blog | httpc"
  description="Articles, blog posts and best practices about httpc framework, node, typescript and API design"
  width="blog"
  navbar={false}
>
  <main class="blog-content">
    <Sidebar page="blog" title="Blog" currentPage="" />
    <article class="content content-no-sidebar side-spacing">
      <header class="mb-5 hstack">
        <h1 class="page-title">Posts</h1>
        <a href="/rss.xml" class="icon d-block ms-2" style="width: 36px;"><Icon name="mdi:rss-box" /></a>
      </header>

      <PostList items={posts} />
    </article>
  </main>
</Layout>
