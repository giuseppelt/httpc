---
import { getDocs } from "../content";

const items = (await getDocs()).filter(x => x.slug.startsWith("tutorials/"));
---

<ul>
  {
    items.map(x => (
      <li>
        <p>
          <a href={`/docs/${x.slug}`}>{x.data.title}</a>
        </p>
        <small>{x.data.description}</small>
      </li>
    ))
  }
</ul>
